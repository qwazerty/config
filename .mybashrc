# Mask chmod when creating file to prevent r/w if not user
umask 066

# NO CAPS LOCK !!!11!
setxkbmap -option ctrl:nocaps

rec_path()
{
    if [ `echo "$1" | wc -c` -lt 21 ]; then
        echo "$2$1"
    else
        rec_path `echo "$1" | cut -d'/' -f2-` '[..]/'
    fi
}

clrblu='\[\e[0;36m\]'
clrred='\[\e[0;31m\]'
clrBred='\[\e[1;31m\]'
clrBblu='\[\e[1;34m\]'
clrrst='\[\e[0m\]'

PS1="${clrblu}[\t] ${clrBred}[\u@\h:${clrBblu}\w]\n\
${clrBred}\$${clrrst} "
